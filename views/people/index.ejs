<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script defer src="../node_modules/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
</head>
<div class="d-flex flex-row-reverse my-4 fs-3 ">
    <a class="btn btn-outline-success" href="people/new">Add Employee</a>
</div>
<div>
    <table class="table align-middle mb-0 bg-white table table-hover">
        <thead class="bg-primary fs-3 text-white">
            <tr>
                <th>Name</th>
                <th>Title</th>
                <th>Status</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% people.forEach(person=> {%>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src=<%=person.image %> class="rounded-circle" alt=""
                            style="width: 45px; height: 45px" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">
                                    <%= `${person.firstName} ${person.lastName}` %>
                                </p>
                                <p class="text-muted mb-0">
                                    <%= person.email %>
                                </p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">
                            <%= person.job %>
                        </p>
                        <p class="text-muted mb-0">
                            <%= person.department %>
                        </p>
                    </td>
                    <td>
                        <% if (person.status==='Online' ) {%>
                            <span class="badge text-bg-success">Online</span>

                            <% } else {%>
                                <span class="badge text-bg-secondary">Offline</span>
                                <% } %>

                    </td>
                    <td>
                        <%=person.position %>
                    </td>
                    <td class="d-flex align-items-center">
                        <a style="padding: 3; height: 36px; margin-right: 6px ;" href="people/<%= person.id %> "
                            class="btn btn-outline-primary btn-rounded btn-sm " data-mdb-ripple-color="dark">
                          View
                        </a>
                        <a style="padding: 3; margin-right: 6px; height: 36px;"
                            class="btn btn-outline-warning btn-rounded btn-sm " data-mdb-ripple-color="dark">
                         Edit
                        </a>
                        <form style="border: 0; margin-top: 14px; " action="/people/<%= person.id %>?_method=DELETE" method="post">
                            <button style="height: 36px;" class="btn btn-outline-danger btn-rounded btn-sm fw-bold" data-mdb-r
                                ipple-color="dark">
                               Delete
                            </button>
                        </form>
                    </td>
                </tr>
                <%}); %>
        </tbody>
    </table>
</div>
